<UserControl x:Class="SongTelenkoDFM.CustomPropertiesUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SongTelenkoDFM"
             mc:Ignorable="d"
             Loaded="UserControl_Loaded"
             Background="Transparent"
             d:DesignHeight="600" d:DesignWidth="300">
    <Border Padding="10">
        <Grid>
            <StackPanel x:Name="NoPartContent" VerticalAlignment="Center">
                <Image Source="part.png" MaxWidth="100" Margin="10"/>
                <TextBlock HorizontalAlignment="Center" Text="Please open a part"/>
            </StackPanel>

            <StackPanel x:Name="MainContent" VerticalAlignment="Center">
                <Button Margin="0 10 0 0" Padding="0 3 0 3" Content="Check part" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Feature DFM Ready -->
                    <TextBlock Text="Feature DFM-Ready" Margin="0 5 0 0" />
                    <TextBox Grid.Row="1" x:Name="FeatureText" Padding="2"  />

                    <Button x:Name="FeatureButton" IsEnabled="False" Click="FeatureButton_Click" Grid.Column="1" Grid.Row="1" Content="Check"/>

                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Feature Data -->
                    <TextBlock Text="Data 1" Margin="0 5 0 0" Grid.Column="0" />
                    <TextBox Grid.Row="1" Grid.Column="0" x:Name="FeatureData1" Padding="2" IsReadOnly="True"/>

                    <TextBlock Text="Data 2" Margin="0 5 0 0" Grid.Column="1" />
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="FeatureData2" Padding="2" IsReadOnly="True"/>

                    <TextBlock Text="Data 3" Margin="0 5 0 0" Grid.Row="2" Grid.Column="0" />
                    <TextBox Grid.Row="3" Grid.Column="0" x:Name="FeatureData3" Padding="2" IsReadOnly="True"/>

                    <TextBlock Text="Data 4" Margin="0 5 0 0" Grid.Row="2" Grid.Column="1" />
                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="FeatureData4" Padding="2" IsReadOnly="True"/>

                </Grid>
            </StackPanel>

        </Grid>
    </Border>
    
</UserControl>
